{
  "compilerOptions": {
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "types": ["node"]
  },
  "include": ["./src/**/*", "./build/**/*"]
}
