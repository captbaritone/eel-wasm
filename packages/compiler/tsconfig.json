{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "commonjs",
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"]
}
