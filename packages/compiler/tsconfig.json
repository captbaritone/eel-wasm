{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "commonjs"
  },
  "include": ["./src/**/*"]
}
